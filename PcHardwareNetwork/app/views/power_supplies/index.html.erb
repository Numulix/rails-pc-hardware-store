
<h1>Power Supplies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Form factor</th>
      <th>Efficiency rating</th>
      <th>Wattage</th>
      <th>Modular</th>
      <th>Color</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @power_supplies.each do |power_supply| %>
      <tr>
        <td><%= power_supply.brand %></td>
        <td><%= power_supply.name %></td>
        <td><%= power_supply.form_factor %></td>
        <td><%= power_supply.efficiency_rating %></td>
        <td><%= power_supply.wattage %> W</td>
        <td><%= power_supply.modular %></td>
        <td><%= power_supply.color %></td>
        <td><%= power_supply.price %></td>
        <td><%= link_to 'Show', power_supply %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_power_supply_path(power_supply) %></td>
        <td><%= link_to 'Destroy', power_supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
  <%= will_paginate(@power_supplies) %>
</div>

<%= link_to 'New Power Supply', new_power_supply_path %>
