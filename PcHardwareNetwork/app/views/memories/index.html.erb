
<h1>Memories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Speed</th>
      <th>Size</th>
      <th>Color</th>
      <th>Cas latency</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memories.each do |memory| %>
      <tr>
        <td><%= memory.brand %></td>
        <td><%= memory.name %></td>
        <td><%= memory.speed %></td>
        <td><%= memory.size %> GB</td>
        <td><%= memory.color %></td>
        <td><%= memory.cas_latency %></td>
        <td>$<%= memory.price %></td>
        <td><%= link_to 'Show', memory %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_memory_path(memory) %></td>
        <td><%= link_to 'Destroy', memory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
  <%= will_paginate(@memories) %>
</div>

<%= link_to 'New Memory', new_memory_path %>
