
<h1>Processor Coolers</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Fan rpm</th>
      <th>Noise level</th>
      <th>Color</th>
      <th>Radiator size</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @processor_coolers.each do |processor_cooler| %>
      <tr>
        <td><%= processor_cooler.brand %></td>
        <td><%= processor_cooler.name %></td>
        <td><%= processor_cooler.fan_rpm %> RPM</td>
        <td><%= processor_cooler.noise_level %> dB</td>
        <td><%= processor_cooler.color %></td>
        <td><%= processor_cooler.radiator_size %> mm</td>
        <td>$<%= processor_cooler.price %></td>
        <td><%= link_to 'Show', processor_cooler %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_processor_cooler_path(processor_cooler) %></td>
        <td><%= link_to 'Destroy', processor_cooler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
  <%= will_paginate(@processor_coolers) %>
</div>

<%= link_to 'New Processor Cooler', new_processor_cooler_path %>
