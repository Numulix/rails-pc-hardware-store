
<h1>Storages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Capacity</th>
      <th>Storage type</th>
      <th>Cache</th>
      <th>Form factor</th>
      <th>Interface</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @storages.each do |storage| %>
      <tr>
        <td><%= storage.brand %></td>
        <td><%= storage.name %></td>
        <td><%= storage_gb_tb(storage) %></td>
        <td><%= storage.storage_type %></td>
        <td><%= storage.cache %></td>
        <td><%= storage.form_factor %></td>
        <td><%= storage.interface %></td>
        <td>$<%= storage.price %></td>
        <td><%= link_to 'Show', storage %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_storage_path(storage) %></td>
        <td><%= link_to 'Destroy', storage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
  <%= will_paginate(@storages) %>
</div>

<%= link_to 'New Storage', new_storage_path %>
