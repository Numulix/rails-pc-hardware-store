
<h1>Motherboards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Name</th>
      <th>Socket</th>
      <th>Form factor</th>
      <th>Memory max</th>
      <th>Memory slots</th>
      <th>Color</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motherboards.each do |motherboard| %>
      <tr>
        <td><%= motherboard.brand %></td>
        <td><%= motherboard.name %></td>
        <td><%= motherboard.socket %></td>
        <td><%= motherboard.form_factor %></td>
        <td><%= motherboard.memory_max %> GB</td>
        <td><%= motherboard.memory_slots %></td>
        <td><%= motherboard.color %></td>
        <td>$<%= motherboard.price %></td>
        <td><%= link_to 'Show', motherboard %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_motherboard_path(motherboard) %></td>
        <td><%= link_to 'Destroy', motherboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="digg_pagination">
  <%= will_paginate(@motherboards) %>
</div>

<%= link_to 'New Motherboard', new_motherboard_path %>
