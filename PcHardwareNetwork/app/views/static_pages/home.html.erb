<div class="center jumbotron">
  <% if current_user %>
  <h1>Welcome to the Sample App, <%= current_user.email %></h1>
  <% else %>
  <h1>Welcome to the Sample App</h1>
  <% end %>

  <h2>
    This is the home page for the Ruby on Rails Tutorial
    sample application.
  </h2>
  
  <% if current_user %>
  <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-lg btn-primary" %>
  <% else %>
  <%= link_to "Sign in", new_user_session_path, class:"btn btn-lg btn-primary" %>
  <%= link_to "Sign up", new_user_registration_path, class:"btn btn-lg btn-primary" %>
  <% end %>
</div>
